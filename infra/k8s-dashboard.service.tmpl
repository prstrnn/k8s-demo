# /etc/systemd/system/k8s-dashboard.service
[Unit]
Description=Kubernetes Dashboard port-forward
After=network.target docker.service

[Service]
User=__USER__
Environment=KUBECONFIG=/home/__USER__/.kube/config
ExecStart=kubectl -n kubernetes-dashboard port-forward svc/kubernetes-dashboard-kong-proxy 8443:443
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
